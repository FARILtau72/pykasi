# ==================================================
# 1. FUNGSI (Functions)
# ==================================================
spill "1. FUNGSI (Functions)";

fungsi tambah(a, b) {
    balikin a + b;
}

fungsi kali(x, y) {
    balikin x * y;
}

duit hasil1 gas tambah(5, 3);
spill "   tambah(5, 3) = ";
spill hasil1;

duit hasil2 gas kali(4, 6);
spill "   kali(4, 6) = ";
spill hasil2;

spill "";

