# ==================================================
# 5. FUNGSI DENGAN KONDISI
# ==================================================
spill "5. FUNGSI DENGAN KONDISI";

fungsi cek_ganjil(n) {
    kalo n % 2 == 1 {
        balikin valid;
    }
    balikin hoax;
}

cek gas cek_ganjil(7);
spill "   cek_ganjil(7) = ";
spill cek;

cek2 gas cek_ganjil(8);
spill "   cek_ganjil(8) = ";
spill cek2;

spill "";

# ==================================================
# 6. FUNGSI REKURSIF
# ==================================================
spill "6. FUNGSI REKURSIF";

fungsi faktorial(n) {
    kalo n <= 1 {
        balikin 1;
    }
    balikin n * faktorial(n - 1);
}

duit fakt5 gas faktorial(5);
spill "   faktorial(5) = ";
spill fakt5;

spill "";

# ==================================================
# 7. LOOP DENGAN BREAK DAN CONTINUE
# ==================================================
spill "7. LOOP DENGAN BREAK DAN CONTINUE";

spill "   Loop dengan berhenti (break):";
duit j gas 0;
puterin j < 10 {
    kalo j == 5 {
        berhenti;
    }
    spill j;
    j gas j + 1;
}

spill "   Loop dengan terus (continue):";
duit k gas 0;
puterin k < 5 {
    k gas k + 1;
    kalo k == 3 {
        terus;
    }
    spill k;
}

spill "";

